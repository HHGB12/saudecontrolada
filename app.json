{
  "name": "saudecontrolada_api",
  "scripts": {
    "postdeploy": "bundle exec rails db:migrate && bundle exec rails db:seed"
  },
  "env": {
    "EMAIL_PASSWORD": {
      "required": true
    },
    "EMAIL_USERNAME": {
      "required": true
    },
    "EXCEPTION_RECIPIENTS": {
      "required": true
    },
    "LANG": {
      "required": true
    },
    "MAILER_HOST": {
      "required": true
    },
    "MAILER_SENDER": {
      "required": true
    },
    "RACK_ENV": {
      "required": true
    },
    "RAILS_ENV": {
      "required": true
    },
    "RAILS_SERVE_STATIC_FILES": {
      "required": true
    },
    "SECRET_KEY_BASE": {
      "description": "A secret key for verifying the integrity of signed cookies.",
      "generator": "secret"
    },
    "SECRET_TOKEN_DEVISE": {
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1
    },
    "worker": {
      "quantity": 1
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    }
  ]
}
