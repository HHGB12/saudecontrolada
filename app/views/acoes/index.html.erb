<%= currently_at t('acoes.menu') %>
<%- model_class = Acao -%>
<%= titulo icon('wrench', t('acoes.menu')) %>

<%= render 'shared/botoes_incluir_e_download', controller: 'acoes', model: model_class,
           url_xls: acoes_path(format: 'xls'), url_pdf: nil %>

<%= render 'shared/campo_buscar', model_class: model_class, url: acoes_path %>

<%= page_entries_info @acoes, model: model_class %>

<% if not @acoes.empty? %>
  <div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover table-striped">
      <thead>
        <tr>
          <th><%= t('bootstrap.actions') %></th>
          <th><%= sortable model_class, 'nome' %></th>
        </tr>
      </thead>
      <tbody>
        <% @acoes.each do |registro| %>
          <tr>
            <td width="100">
              <%= botao_alterar registro, edit_acao_path(registro), model_class %>
              <%= botao_excluir registro, model_class %>
            </td>
            <td><%= registro.nome %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
<%= will_paginate %>