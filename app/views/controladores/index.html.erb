<%= currently_at t('controladores.menu') %>
<%- model_class = Controlador -%>
<%= titulo icon('cogs', t('controladores.menu')) %>

<%= render 'shared/botoes_incluir_e_download', controller: 'controladores', model: model_class,
           url_xls: controladores_path(format: 'xls'), url_pdf: nil %>

<%= render 'shared/campo_buscar', model_class: model_class, url: controladores_path %>

<%= page_entries_info @controladores, model: model_class %>

<% if not @controladores.empty? %>
  <div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover table-striped">
      <thead>
        <tr>
          <th><%= t('bootstrap.actions') %></th>
          <th><%= sortable model_class, 'nome' %></th>
        </tr>
      </thead>
      <tbody>
        <% @controladores.each do |registro| %>
          <tr>
            <td width="100">
              <%= botao_alterar registro, edit_controlador_path(registro), model_class %>
              <%= botao_excluir registro, model_class %>
            </td>
            <td><%= registro.nome %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
<%= will_paginate %>