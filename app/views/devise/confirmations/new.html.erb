<%= currently_at t('.title') %>
<%= corrigir_erros @user.errors.any? %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name),
                        html: { method: :post }) do |f| %>
      <%= titulo t('.title') %>
      <% if f.full_error :confirmation_token %>
        <div class="alert alert-danger"><%= f.full_error :confirmation_token %></div>
      <% end %>
      <%= f.input :email, autofocus: true %>
      <%= botao t('.submit'), class: 'btn btn-lg btn-primary btn-block' %>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>