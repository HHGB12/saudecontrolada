<%= currently_at t('.title') %>
<h2><%= t('.title') %></h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>
  <% if f.full_error :reset_password_token %>
    <div class="error"><%= f.full_error :reset_password_token %></div>
  <% end %>


  <div class="form-inputs">
    <%= f.input :password, required: true, autofocus: true, hint: false %>
    <%= f.input :reset_password_token, as: :hidden %>
    <%= f.input :password_confirmation, required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, t('.submit'), class: 'radius', data: { disable_with: t('disable_with') } %>
  </div>
<% end %>

<%= render 'devise/shared/links' %>


