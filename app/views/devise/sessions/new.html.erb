<%= currently_at t('.title') %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
                        html: { class: 'form-signin' }) do |f| %>
      <%= titulo t('.title') %>
      <%= f.input :email, required: false, autofocus: true %>
      <%= f.input :password, required: false %>
      <%= f.label :remember_me, class: 'checkbox' do %>
        <%= f.check_box :remember_me %> <%= User.human_attribute_name(:remember_me) %>
      <% end %>
      <%= botao t('.submit'), class: 'btn btn-lg btn-primary btn-block' %>
    <% end %>
    <%= render 'devise/shared/links' %>
  </div>
</div>