<%= currently_at t('.titulo') %>
<%= titulo t('.titulo') %>
<%= corrigir_erros @erro.errors.any? %>

<%= simple_form_for @erro, html: { class: 'form' },
                    defaults: { input_html: { class: 'form-control', readonly: true } } do |f| %>
  <%= f.input :created_at, as: :string, input_html: { 'value' => l(@erro.created_at, format: :data_hora) } %>
  <%= f.input :recurso_nome %>
  <%= f.input :nome %>
  <%= f.input :descricao, as: :text, input_html: {rows: 5} %>
  <%= f.input :usuario_email %>
  <%= f.input :condo_nome %>
  <%= f.input :ip %>
  <%= f.input :dispositivo %>
  <%= f.input :resolucao, as: :text, autofocus: true, input_html: { readonly: false, rows: 5 } %>
  <%= f.input :erro_status_id, collection: Hash[ErroStatus.all.map{|b| [b.nome, b.id]}],
    input_html: { readonly: false } %>

  <%= botao_salvar %>
  <%= botao_cancelar erros_path %>
<% end %>
<br />
<%= botao_excluir @erro, Erro, { texto_botao: t('links.excluir') } %>