<%= currently_at t('pesos.menu') %>
<%- model_class = Peso -%>
<%= titulo raw('<i class="fa fa-cutlery"></i> ') + model_class.model_name.human %>

<%= high_chart('chart', @chart) %>

<div class="row">
  <div class="col-xs-6"><%= botao_incluir 'pesos', model_class %></div>
  <div class="col-xs-6">
    <div class="btn-group pull-right">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" title="<%= t('labels.download_em')%>">
        <i class="fa fa-download fa-lg"></i> <span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><a href="#"><%= link_to t('labels.download_excel'), pesos_path(format: 'xls') %></li><a>
        <li><a href="#"><%= link_to t('labels.download_pdf'), pesos_path(format: 'pdf') %></a></li>
      </ul>
    </div>
  </div>
</div>

<br />

<% if not @pesos.empty? %>
  <%= page_entries_info(@pesos) %>
  <div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover table-striped">
      <thead>
        <tr>
          <th><%= t('bootstrap.actions') %></th>
          <th><%= sortable model_class, 'data' %></th>
          <th><%= sortable model_class, 'altura' %></th>
          <th><%= sortable model_class, 'peso' %></th>
          <th><%= model_class.human_attribute_name(:peso_ideal) %></th>
          <th><%= model_class.human_attribute_name(:situacao_imc) %></th>
        </tr>
      </thead>
      <tbody>
        <% @pesos.each do |registro| %>
          <tr>
            <td width="100">
              <%= botao_alterar registro, edit_peso_path(registro), model_class %>
              <%= botao_excluir registro, l(registro.data), model_class %>
            </td>
            <td><%= l(registro.data) %></td>
            <td><%= number_to_human(registro.altura) %></td>
            <td><%= number_to_human(registro.peso, precision: 4) %></td>
            <td><%= registro.peso_ideal %></td>
            <td><%= registro.situacao_imc %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>

<%= will_paginate %>
