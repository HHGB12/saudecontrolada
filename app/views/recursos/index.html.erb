<%= currently_at t('recursos.menu') %>
<%- model_class = Recurso -%>
<%= titulo icon('tasks', t('recursos.menu')) %>

<%= render 'shared/botoes_incluir_e_download', controller: 'recursos', model: model_class,
           url_xls: recursos_path(format: 'xls'), url_pdf: nil %>

<%= render 'shared/campo_buscar', model_class: model_class, url: recursos_path %>

<%= page_entries_info @recursos, model: model_class %>

<% if not @recursos.empty? %>
  <div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover table-striped">
      <thead>
        <tr>
          <th><%= t('bootstrap.actions') %></th>
          <th><%= sortable model_class, 'nome' %></th>
          <th><%= t('recursos_categorias.column.name') %></th>
          <th><%= t('controladores.column.name') %></th>
          <th><%= t('acoes.column.name') %></th>
          <th><%= model_class.human_attribute_name(:visivel) %></th>
        </tr>
      </thead>
      <tbody>
        <% @recursos.each do |registro| %>
          <tr>
            <td width="100">
              <%= botao_alterar registro, edit_recurso_path(registro), model_class %>
              <%= botao_excluir registro, model_class %>
            </td>
            <td><%= registro.nome %></td>
            <td><%= registro.recurso_categoria.nome if !registro.recurso_categoria.nil? %></td>            
            <td><%= registro.controlador.nome %></td>
            <td><%= registro.acao.nome %></td>
            <td><%= imagem_true(registro.visivel?) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
<%= will_paginate %>
