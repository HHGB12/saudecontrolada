<%= currently_at t('recursos.menu') %>
<%- model_class = Recurso -%>
<%= titulo page_entries_info @recursos, model: model_class %>
<%= botao_incluir 'recursos', model_class %>

<p>
  <%= form_tag recursos_path, method: :get, id: 'recursos_search' do %>
    <div class="row">
      <div class="col-xs-9" style="width: 300px;">
        <%= text_field_tag :search, params[:search], class: 'form-control',
                           placeholder: t('titles.buscar_por', atributo: model_class.human_attribute_name(:nome)) %>
      </div>
      <div class="col-xs-3">
        <%= button_tag (raw('<i class="glyphicon glyphicon-search"></i> ')),
                       title: t('titles.buscar_por', atributo: model_class.human_attribute_name(:nome)),
                       class: 'btn btn-primary', id: 'find' %>
      </div>
    </div>
  <% end %>
</p>

<%= limpar_filtro(recursos_path) %>
  
<% if not @recursos.empty? %>
  <%= t('labels.download_em') %><%= link_to 'Excel', recursos_path(format: 'xls') %>
  <div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover table-striped">
      <thead>
        <tr>
          <th><%= t('bootstrap.actions') %></th>
          <th><%= model_class.human_attribute_name(:nome) %></th>
          <th><%= t('recursos_categorias.column.name') %></th>
          <th><%= t('controladores.column.name') %></th>
          <th><%= t('acoes.column.name') %></th>
          <th><%= model_class.human_attribute_name(:visivel) %></th>
        </tr>
      </thead>
      <tbody>
        <% @recursos.each do |registro| %>
          <tr>
            <td width="100">
              <%= botao_alterar registro, edit_recurso_path(registro), model_class %>
              <%= botao_excluir registro, model_class %>
            </td>
            <td><%= registro.nome %></td>
            <td><%= registro.recurso_categoria.nome if !registro.recurso_categoria.nil? %></td>            
            <td><%= registro.controlador.nome %></td>
            <td><%= registro.acao.nome %></td>
            <td><%= imagem_true(registro.visivel?) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
<%= will_paginate %>