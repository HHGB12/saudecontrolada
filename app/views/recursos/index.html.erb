<%= currently_at t('recursos.menu') %>
<%- model_class = Recurso -%>
<%= titulo t('recursos.menu') %>

<div class="row">
  <div class="col-xs-6"><%= botao_incluir 'recursos', model_class %></div>
  <div class="col-xs-6">
    <div class="btn-group pull-right">
      <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown" title="<%= t('titles.download_registros')%>">
        <%= raw('<i class="fa fa-download fa-lg"></i> ') + t('links.download') + ' ' %><span class="caret"></span>
      </button>
      <ul class="dropdown-menu" role="menu">
        <li><a href="#"><%= link_to t('labels.download_excel'), recursos_path(format: 'xls') %></a></li>
      </ul>
    </div>
  </div>
</div>

<%= render 'shared/campo_buscar', model_class: model_class, url: recursos_path %>

<%= page_entries_info @recursos, model: model_class %>

<% if not @recursos.empty? %>
  <div class="table-responsive">
    <table class="table table-bordered table-condensed table-hover table-striped">
      <thead>
        <tr>
          <th><%= t('bootstrap.actions') %></th>
          <th><%= model_class.human_attribute_name(:nome) %></th>
          <th><%= t('recursos_categorias.column.name') %></th>
          <th><%= t('controladores.column.name') %></th>
          <th><%= t('acoes.column.name') %></th>
          <th><%= model_class.human_attribute_name(:visivel) %></th>
        </tr>
      </thead>
      <tbody>
        <% @recursos.each do |registro| %>
          <tr>
            <td width="100">
              <%= botao_alterar registro, edit_recurso_path(registro), model_class %>
              <%= botao_excluir registro, model_class %>
            </td>
            <td><%= registro.nome %></td>
            <td><%= registro.recurso_categoria.nome if !registro.recurso_categoria.nil? %></td>            
            <td><%= registro.controlador.nome %></td>
            <td><%= registro.acao.nome %></td>
            <td><%= imagem_true(registro.visivel?) %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% end %>
<%= will_paginate %>
