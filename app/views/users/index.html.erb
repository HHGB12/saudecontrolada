<%= currently_at t('users.menu') %>
<%- model_class = User -%>
<%= titulo icon('user', t('users.menu')) %>

<%= render 'shared/botoes_incluir_e_download', controller: nil, model: nil,
           url_xls: users_path(format: 'xls'), url_pdf: users_path(format: 'pdf') %>

<%= page_entries_info @users, model: model_class %>

<div class="table-responsive">
  <table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
      <tr>
        <th><%= sortable model_class, 'current_sign_in_at' %></th>
        <th><%= sortable model_class, 'email' %></th>
        <th><%= sortable model_class, 'sign_in_count' %></th>
        <th><%= sortable model_class, 'created_at' %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |registro| %>
        <tr>
          <td><%= l(registro.current_sign_in_at, format: :data_hora) unless registro.current_sign_in_at.blank? %></td>
          <td><%= registro.email %></td>
          <td><%= registro.sign_in_count %></td>
          <td><%= l(registro.created_at, format: :data_hora) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate %>