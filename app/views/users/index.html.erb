<%= currently_at t('activerecord.models.user.other') %>
<%- model_class = User -%>
<% breadcrumb :users %>
<%= titulo icon('users', t('activerecord.models.user.other')) %>

<%= render 'shared/botoes_incluir_e_download', controller: nil, model: nil,
           url_xls: users_path(format: 'xlsx'), url_pdf: users_path(format: 'pdf') %>

<%= page_entries_info @users, model: model_class %>

<div class="table-responsive">
  <table class="table table-bordered table-condensed table-hover table-striped">
    <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:current_sign_in_at) %></th>
        <th><%= model_class.human_attribute_name(:email) %></th>
        <th><%= model_class.human_attribute_name(:sign_in_count) %></th>
        <th><%= model_class.human_attribute_name(:created_at) %></th>
      </tr>
    </thead>
    <tbody>
      <% @users.each do |registro| %>
        <tr>
          <td><%= l(registro.current_sign_in_at, format: :data_hora) unless registro.current_sign_in_at.blank? %></td>
          <td><%= registro.email %></td>
          <td><%= registro.sign_in_count %></td>
          <td><%= l(registro.created_at, format: :data_hora) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate %>